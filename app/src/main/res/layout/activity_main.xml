<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <ProgressBar
        android:id="@+id/pb_progressbar"
        style="@style/StyleProgressBarMini"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="70dp"
        android:background="@drawable/shape_progressbar_bg"
        android:max="100"
        android:progress="50"/>

    <com.sssta.memorygame.AutoDrawView
        android:id="@+id/gesture_auto_draw_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.sssta.memorygame.GestureLockView
        android:id="@+id/gesture_lock_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/score"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="70dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="分数："/>

    <TextView
        android:id="@+id/score_board"
        android:layout_toRightOf="@id/score"
        android:layout_marginTop="20dp"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"/>

    <TextView
        android:id="@+id/max_socre"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="190dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="最高分："/>
    <TextView
        android:id="@+id/max_score_board"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/max_socre"
        android:layout_marginTop="20dp"
        android:text="0"
        android:textSize="25sp"/>

    <Button
        android:id="@+id/btn_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="66dp" />


</RelativeLayout>
